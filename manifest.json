{
    "manifest_version": 3,
    "name": "WebInsight",
    "version": "0.2.0",
    "description": "Analyze, manage, and select web content with AI insights and Google Drive backup.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs",
      "contextMenus",
      "sidePanel",
      "alarms"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://apis.google.com/*",
      "https://accounts.google.com/*"
    ],
    "background": {
      "service_worker": "js/background.js",
      "type": "module"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "options_page": "html/options.html",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/content.js"],
        "css": ["css/content.css"],
        "run_at": "document_idle"
      }
    ],
    "side_panel": {
      "default_path": "html/panel.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' https://apis.google.com https://accounts.google.com; object-src 'self'"
    }
  }